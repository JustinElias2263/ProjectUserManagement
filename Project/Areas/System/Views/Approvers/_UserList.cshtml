@model IEnumerable<ApplicationUser>

<div class="modal-header">
    <h5>Users</h5>
</div>

<div class="modal-body">
    <table id="tblUsers" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StaffId</td>
                    <td>@item.FirstName</td>
                    <td>@item.MiddleName</td>
                    <td>@item.LastName</td>
                    <td>
                        <form asp-area="System" asp-controller="Approvers" asp-action="AddApprover" asp-route-UserId="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-success"><i class="fas fa-plus"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#tblUsers').DataTable();
    });
</script>
