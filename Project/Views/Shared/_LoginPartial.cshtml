@using Microsoft.AspNetCore.Identity
@using Project.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>          
        </li>
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
                <a href="#" onclick="$(this).closest('form').submit(); return false;" class="nav-link">Log Out</a>
            </form>
        </li>
    </ul>
   
}
else
{
    <ul class="navbar-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>
    </ul>

}
